{
  "manifest_version": 3,
  "name": "SyncUp - Universal Context Intelligence",
  "version": "2.0.0",
  "description": "AI-powered contextual awareness across all tabs using Google Gemini Nano (on-device) and Gemini API - Generate context cards, track action items, and get instant answers",

  "permissions": [
    "tabCapture",
    "scripting",
    "activeTab",
    "storage",
    "tabs",
    "sidePanel",
    "notifications"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content/prompt-api-handler.js", "content/meet-content.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": false
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content/prompt-api-handler.js", "content/universal-content.js"],
      "css": ["content/universal-styles.css"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],

  "action": {
    "default_title": "SyncUp - Click to open side panel",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "side_panel": {
    "default_path": "sidepanel/sidepanel.html"
  },

  "commands": {
    "open-command-palette": {
      "suggested_key": {
        "default": "Ctrl+Shift+Space",
        "mac": "Command+Shift+Space"
      },
      "description": "Open SyncUp command palette"
    }
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*", "content/*", "shared/*"],
      "matches": ["<all_urls>"]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}